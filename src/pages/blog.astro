---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";

const allPosts = Object.values(
  import.meta.glob("./posts/*.md", { eager: true }),
);
const pageTitle = "My Astro Learning Blog";
---

<BaseLayout pageTitle={pageTitle}>
  <p>
    Lorem, ipsum dolor sit amet consectetur adipisicing elit. Fuga cumque iste
    saepe cum voluptate laboriosam, molestiae alias possimus non tempore! Quidem
    enim cumque illo quas voluptas? Magni labore reiciendis tempora.
  </p>
  <ul>
    {
      allPosts.map((post: any) => (
        <BlogPost url={post.url} title={post.frontmatter.title} />
      ))
    }
  </ul>
</BaseLayout>
